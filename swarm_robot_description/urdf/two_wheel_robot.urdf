<?xml version="1.0"?>

<robot name="two_wheel_robot">


<link name="body_link">
  <inertial>
    <mass value="0.03" />
    <origin xyz="0 0 0.0127" />
    <inertia ixx="0.000032258" ixy="0.0" ixz="0.0"
      iyy="0.000032258" iyz="0.0"
      izz="0.000032258" />
  </inertial>

  <visual>
    <origin xyz="0 0 0.0127" />
    <geometry>
      <box size="0.0254 0.0254 0.0254"/>
    </geometry>
  </visual>

  <collision>
    <origin xyz="0 0 0.0127" />
    <geometry>
      <box size="0.0254 0.0254 0.0254"/>
    </geometry>
  </collision>
</link>

<gazebo reference="body_link">
  <material>Gazebo/Blue</material>
</gazebo>


<link name="left_wheel">
  <inertial>
    <mass value="0.002" />
    <origin xyz="0 0 0.002" />
    <inertia ixx="0.00000005659" ixy="0.0" ixz="0.0"
      iyy="0.00000005659" iyz="0.0"
      izz="0.0000001125" />
  </inertial>

  <visual>
    <origin xyz="0 0 0.002" />
    <geometry>
      <cylinder radius="0.015" length="0.004" />
    </geometry>
  </visual>

  <collision>
    <origin xyz="0 0 0.002" />
    <geometry>
      <cylinder radius="0.015" length="0.004" />
    </geometry>
  </collision>
</link>

<gazebo reference="left_wheel">
  <material>Gazebo/Red</material>
</gazebo>


<link name="right_wheel">
  <inertial>
    <mass value="0.002" />
    <origin xyz="0 0 0.002" />
    <inertia ixx="0.00000005659" ixy="0.0" ixz="0.0"
      iyy="0.00000005659" iyz="0.0"
      izz="0.0000001125" />
  </inertial>

  <visual>
    <origin xyz="0 0 0.002" />
    <geometry>
      <cylinder radius="0.015" length="0.004" />
    </geometry>
  </visual>

  <collision>
    <origin xyz="0 0 0.002" />
    <geometry>
      <cylinder radius="0.015" length="0.004" />
    </geometry>
  </collision>
</link>

<gazebo reference="right_wheel">
  <material>Gazebo/Red</material>
</gazebo>


<joint name="left_motor" type="continuous">
  <parent link="body_link" />
  <child link="left_wheel" />
  <origin xyz="0 -0.0177 0.0127" rpy="-1.5708 0 0" />
  <axis xyz="0 0 1" />
</joint>


<joint name="right_motor" type="continuous">
  <parent link="body_link" />
  <child link="right_wheel" />
  <origin xyz="0 0.0177 0.0127" rpy="1.5708 0 0" />
  <axis xyz="0 0 1" />
</joint>


</robot>
