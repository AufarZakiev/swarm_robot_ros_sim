<?xml version="1.0"?>

<robot name="two_wheel_robot">


<link name="body_link">
  <inertial>
    <mass value="0.03" />
    <origin xyz="0 0 0.0127" />
    <inertia ixx="0.000032258" ixy="0.0" ixz="0.0"
      iyy="0.000032258" iyz="0.0"
      izz="0.000032258" />
  </inertial>

  <visual>
    <origin xyz="0 0 0.0127" />
    <geometry>
      <mesh filename="package://swarm_robot_description/sketchup/twowheel_body.dae"/>
    </geometry>
  </visual>

  <collision>
    <origin xyz="0 0 0.0127" />
    <geometry>
      <!-- <box size="0.0254 0.0254 0.0254"/> -->
      <mesh filename="package://swarm_robot_description/sketchup/twowheel_body.dae"/>
    </geometry>
  </collision>
</link>

<gazebo reference="body_link">
  <!-- tag name has to be mu1, though in gazebo they are mu and mu2 -->
  <mu1>0.1</mu1>
  <mu2>0.1</mu2>
</gazebo>


<link name="front_sphere">
  <inertial>
    <mass value="0.0000001" />
    <origin xyz="0 0 0" />
    <inertia ixx="0.00000000001" ixy="0.0" ixz="0.0"
      iyy="0.00000000001" iyz="0.0"
      izz="0.00000000001" />
  </inertial>

  <!-- make the sphere invisible -->
<!--   <visual>
    <origin xyz="0 0 0" />
    <geometry>
      <sphere radius="0.002298" />
    </geometry>
  </visual> -->

  <collision>
    <origin xyz="0 0 0" />
    <geometry>
      <sphere radius="0.002298" />
    </geometry>
  </collision>
</link>

<joint name="front_support" type="fixed">
  <parent link="body_link" />
  <child link="front_sphere" />
  <origin xyz="0.0104 0 0" rpy="0 0 0" />
</joint>


<link name="back_sphere">
  <inertial>
    <mass value="0.0000001" />
    <origin xyz="0 0 0" />
    <inertia ixx="0.00000000001" ixy="0.0" ixz="0.0"
      iyy="0.00000000001" iyz="0.0"
      izz="0.00000000001" />
  </inertial>

<!--   <visual>
    <origin xyz="0 0 0" />
    <geometry>
      <sphere radius="0.002298" />
    </geometry>
  </visual> -->

  <collision>
    <origin xyz="0 0 0" />
    <geometry>
      <sphere radius="0.002298" />
    </geometry>
  </collision>
</link>

<joint name="back_support" type="fixed">
  <parent link="body_link" />
  <child link="back_sphere" />
  <origin xyz="-0.0104 0 0" rpy="0 0 0" />
</joint>


<link name="left_wheel">
  <inertial>
    <mass value="0.002" />
    <origin xyz="0 0 0.002" />
    <inertia ixx="0.00000005659" ixy="0.0" ixz="0.0"
      iyy="0.00000005659" iyz="0.0"
      izz="0.0000001125" />
  </inertial>

  <visual>
    <origin xyz="0 0 0.002" />
    <geometry>
      <mesh filename="package://swarm_robot_description/sketchup/twowheel_left.dae"/>
    </geometry>
<!--     <geometry>
      <cylinder radius="0.015" length="0.004" />
    </geometry> -->
  </visual>

  <collision>
    <origin xyz="0 0 0.002" />
    <geometry>
      <!-- <cylinder radius="0.015" length="0.004" /> -->
      <mesh filename="package://swarm_robot_description/sketchup/twowheel_left.dae"/>
    </geometry>
  </collision>
</link>

<gazebo reference="left_wheel">
  <mu1>1</mu1>
  <mu2>0.5</mu2>
</gazebo>


<link name="right_wheel">
  <inertial>
    <mass value="0.002" />
    <origin xyz="0 0 0.002" />
    <inertia ixx="0.00000005659" ixy="0.0" ixz="0.0"
      iyy="0.00000005659" iyz="0.0"
      izz="0.0000001125" />
  </inertial>

  <visual>
    <origin xyz="0 0 0.002" />
    <geometry>
      <mesh filename="package://swarm_robot_description/sketchup/twowheel_right.dae"/>
    </geometry>
  </visual>

  <collision>
    <origin xyz="0 0 0.002" />
    <geometry>
      <!-- <cylinder radius="0.015" length="0.004" /> -->
      <mesh filename="package://swarm_robot_description/sketchup/twowheel_right.dae"/>
    </geometry>
  </collision>
</link>

<gazebo reference="right_wheel">
  <mu1>1</mu1>
  <mu2>0.5</mu2>
</gazebo>


<joint name="left_motor" type="continuous">
  <parent link="body_link" />
  <child link="left_wheel" />
  <!-- <origin xyz="0 -0.0177 0.0127" rpy="-1.5708 0 0" /> -->
  <origin xyz="0 0.0177 0.0127" rpy="1.5708 0 0" />
<!--   this is very weird, the uncommented one is more reasonable
  but the uncommented one demonstrate the right position and rotation in gazebo -->
  <axis xyz="0 0 -1" />
<!--   important axis setting here, with the corresponding setting in right_motor
  two wheels are tuned at the same direction, which means
  when the same wheel position command is given, both wheels will make the same effect
  of pushing the robot forward or backward -->
</joint>


<joint name="right_motor" type="continuous">
  <parent link="body_link" />
  <child link="right_wheel" />
  <!-- <origin xyz="0 0.0177 0.0127" rpy="1.5708 0 0" /> -->
  <origin xyz="0 -0.0177 0.0127" rpy="-1.5708 0 0" />
  <axis xyz="0 0 1" />

</joint>


</robot>
